<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">

    <label for="airline-input">Airline:</label>
    <input 
      type="text" 
      name="airline" 
      value="<%= flight.airline %>" id="airline-input"
      >

    <label for="airport-input">Airport:</label>
      <select name="airport"  value="<%= flight.airport %>" id="airport-input" >
        <option value="<%= flight.airport %>"><%= flight.airport %></option>
        <option value="DTW">DTW</option>
        <option value="LGA">LGA</option>
        <option value="DEN">DEN</option>
        <option value="EWR">EWR</option>
      </select>
    

    <label for="flight-number-input">Flight Number</label>
   
    <input type="text" name="flightNo" value="<%= flight.flightNo %>" id="flight-number-input">
 
    <label for="departs-input">Departs:</label>
    <input type="datetime-local" value="<%= flight.departs %>" name="departs">

    <button type="submit">Update Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>