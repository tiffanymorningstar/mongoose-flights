<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">

    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" id="airline-input">

    <label for="airport-input">Airport:</label>
    <select name="airport">
      <option value="DEN">DEN</option>
      <option value="DTW">DTW</option>
      <option value="LGA">LGA</option>
      <option value="EWR">EWR</option>
    </select>

    <label for="flight-number-input">Flight Number:</label>
    <input type="text" name="flightNo" id="flight-number-input">

    <label for="departs-input">Departs:</label>
    <input type="datetime-local" name="departs">

    <button type="submit">Add Flight:</button>
  </form>
</main>

<%- include("../partials/footer") %>